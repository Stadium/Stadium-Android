<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.stadiumplayers.stadium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/container_spacing" >

    <com.rperryng.roboto.RobotoTextView
        android:id="@+id/results_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_spacing_normal"
        android:padding="@dimen/container_spacing"
        android:textSize="@dimen/text_title"
        app:font="regularBold" />

    <ListView
        android:id="@+id/result_list_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="@dimen/container_spacing"
        android:scrollbarStyle="outsideOverlay" />

</LinearLayout>