<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.stadiumplayers.stadium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/container_spacing"
    tools:context="com.stadiumplayers.stadium.ActivityMain$PlaceholderFragment" >

    <com.rperryng.roboto.RobotoTextView
        android:id="@+id/main_text_hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:font="light" />

    <com.rperryng.roboto.RobotoButton
        app:font="light"
        android:id="@+id/main_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/login" />

</RelativeLayout>